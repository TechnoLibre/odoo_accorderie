                        <section class="s_buttons_form">
                            <div class="txt_question">
                                <h1>Que souhaitez-vous faire ?</h1>
                            </div>
                            <form id="participer_form" method="GET" action="/publier-offre">
                                <div class="buttons_form_container tab">
                                    <input type="radio" id="pub_offre" name="pub" value="1" required="required" />
                                    <label for="pub_offre" class="button_form btn">
                                        <h5>Publier une offre de service</h5>
                                        <p>
                                            Vous souhaitez offrir votre service?
                                            <br />
                                            Cliquez ici
                                        </p>
                                    </label>
                                    <input type="radio" id="pub_demande" name="pub" value="2" />
                                    <label for="pub_demande" class="button_form btn">
                                        <h5>Publier une demande de service</h5>
                                        <p>
                                            Vous souhaitez offrir votre service?
                                            <br />
                                            Cliquez ici
                                        </p>
                                    </label>
                                    <input type="radio" id="creer_entente" name="pub" value="3" />
                                    <label for="creer_entente" class="button_form btn">
                                        <h5>Publier une demande de service</h5>
                                        <p>
                                            Vous souhaitez offrir votre service?
                                            <br />
                                            Cliquez ici
                                        </p>
                                    </label>
                                    <input type="radio" id="valider_service" name="pub" value="4" />
                                    <label for="valider_service" class="button_form btn">
