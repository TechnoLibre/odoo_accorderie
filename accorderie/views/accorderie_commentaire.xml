                />
                <filter
                    domain="[('solution_pour_regler','!=',False)]"
                    name="solution_pour_regler"
                    string="Solution pour r&#233;gler la situation"
                />
                <filter domain="[('type_offre','!=',False)]" name="type_offre" string="Type de l'offre" />
            </search>
        </field>
