<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="accorderie_type_service_categorie_view_form" model="ir.ui.view">
        <field name="name">accorderie_type_service_categorie_form</field>
        <field name="model">accorderie.type.service.categorie</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-archive" name="toggle_active" type="object">
                            <field name="active" widget="boolean_button" />
                        </button>
                    </div>
                    <group>
                        <field name="nom" />
                    </group>
                    <group>
                        <field name="approuve" />
                    </group>
                    <group>
                        <field name="icon" widget="image" />
                    </group>
                    <group>
                        <field name="nocategorie" />
                    </group>
                    <group>
                        <field name="type_service_sous_categorie" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="accorderie_type_service_categorie_view_graph" model="ir.ui.view">
        <field name="name">accorderie_type_service_categorie_graph</field>
        <field name="model">accorderie.type.service.categorie</field>
        <field name="arch" type="xml">
            <graph string="Accorderie type service categorie">
                <field name="nom" type="row" />
                <field name="approuve" type="row" />
                <field name="icon" type="row" />
                <field name="nocategorie" type="measure" />
            </graph>
        </field>
    </record>

    <record id="accorderie_type_service_categorie_view_kanban" model="ir.ui.view">
        <field name="name">accorderie_type_service_categorie_kanban</field>
        <field name="model">accorderie.type.service.categorie</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="nom" />
                <field name="approuve" />
                <field name="icon" widget="image" />
                <field name="nocategorie" />
                <field name="type_service_sous_categorie" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="nom" />
                                        </strong>
                                    </li>
                                    <li class="text-success float-right mb4" t-if="record.approuve.raw_value">
                                        <i aria-label="Ok" class="fa fa-circle" role="img" title="Ok" />
                                    </li>
                                    <li class="text-danger float-right mb4" t-if="!record.approuve.raw_value">
                                        <i aria-label="Invalid" class="fa fa-circle" role="img" title="Invalid" />
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="icon" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="nocategorie" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="type_service_sous_categorie" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="accorderie_type_service_categorie_view_pivot" model="ir.ui.view">
        <field name="name">accorderie_type_service_categorie_pivot</field>
        <field name="model">accorderie.type.service.categorie</field>
        <field name="arch" type="xml">
            <pivot string="Accorderie type service categorie">
                <field name="nom" type="row" />
                <field name="approuve" type="row" />
                <field name="nocategorie" type="measure" />
            </pivot>
        </field>
    </record>

    <record id="accorderie_type_service_categorie_view_search" model="ir.ui.view">
        <field name="name">accorderie_type_service_categorie_search</field>
        <field name="model">accorderie.type.service.categorie</field>
        <field name="arch" type="xml">
            <search string="Accorderie type service categorie">
                <filter domain="[('nom','!=',False)]" name="nom" string="Nom" />
                <filter
                    domain="[('active','=',False)]"
                    name="Inactive"
                    string="Inactive Accorderie type service categorie"
                />
                <filter domain="[('approuve','=',True)]" name="approuve" string="Approuv&#233;" />
                <filter domain="[('icon','!=',False)]" name="icon" string="Icon" />
                <filter domain="[('nocategorie','!=',False)]" name="nocategorie" string="Nocategorie" />
                <filter
                    domain="[('type_service_sous_categorie','!=',False)]"
                    name="type_service_sous_categorie"
                    string="Type Service Sous Categorie"
                />
            </search>
        </field>
    </record>

    <record id="accorderie_type_service_categorie_view_tree" model="ir.ui.view">
        <field name="name">accorderie_type_service_categorie_tree</field>
        <field name="model">accorderie.type.service.categorie</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nom" />
                <field name="approuve" />
                <field name="icon" widget="image" />
                <field name="nocategorie" />
                <field name="type_service_sous_categorie" />
            </tree>
        </field>
    </record>

    <act_window
        id="accorderie_type_service_categorie_categorie_de_services_action_window"
        name="Cat&#233;gorie de services"
        res_model="accorderie.type.service.categorie"
        view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
