<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="accorderie_quartier_view_form" model="ir.ui.view">
        <field name="name">accorderie_quartier_form</field>
        <field name="model">accorderie.quartier</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="nom" />
                    </group>
                    <group>
                        <field name="arrondissement" />
                    </group>
                    <group>
                        <field name="membre" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="accorderie_quartier_view_graph" model="ir.ui.view">
        <field name="name">accorderie_quartier_graph</field>
        <field name="model">accorderie.quartier</field>
        <field name="arch" type="xml">
            <graph string="Accorderie quartier">
                <field name="nom" type="row" />
                <field name="arrondissement" type="row" />
            </graph>
        </field>
    </record>

    <record id="accorderie_quartier_view_kanban" model="ir.ui.view">
        <field name="name">accorderie_quartier_kanban</field>
        <field name="model">accorderie.quartier</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="nom" />
                <field name="arrondissement" />
                <field name="membre" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="nom" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="arrondissement" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="membre" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="accorderie_quartier_view_pivot" model="ir.ui.view">
        <field name="name">accorderie_quartier_pivot</field>
        <field name="model">accorderie.quartier</field>
        <field name="arch" type="xml">
            <pivot string="Accorderie quartier">
                <field name="nom" type="row" />
                <field name="arrondissement" type="row" />
            </pivot>
        </field>
    </record>

    <record id="accorderie_quartier_view_search" model="ir.ui.view">
        <field name="name">accorderie_quartier_search</field>
        <field name="model">accorderie.quartier</field>
        <field name="arch" type="xml">
            <search string="Accorderie quartier">
                <filter domain="[('nom','!=',False)]" name="nom" string="Nom du quartier" />
                <filter domain="[('arrondissement','!=',False)]" name="arrondissement" string="Arrondissement" />
                <filter domain="[('membre','!=',False)]" name="membre" string="Membre" />
            </search>
        </field>
    </record>

    <record id="accorderie_quartier_view_tree" model="ir.ui.view">
        <field name="name">accorderie_quartier_tree</field>
        <field name="model">accorderie.quartier</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nom" />
                <field name="arrondissement" />
                <field name="membre" />
            </tree>
        </field>
    </record>

    <act_window
        id="accorderie_quartier_quartier_action_window"
        name="Quartier"
        res_model="accorderie.quartier"
        view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
