<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="accorderie_type_service_view_form" model="ir.ui.view">
        <field name="name">accorderie_type_service_form</field>
        <field name="model">accorderie.type.service</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-archive" name="toggle_active" type="object">
                            <field name="active" widget="boolean_button" />
                        </button>
                    </div>
                    <group>
                        <field name="nom_complet" />
                    </group>
                    <group>
                        <field name="approuve" />
                    </group>
                    <group>
                        <field name="description" />
                    </group>
                    <group>
                        <field name="identifiant" />
                    </group>
                    <group>
                        <field name="nom" />
                    </group>
                    <group>
                        <field name="numero" />
                    </group>
                    <group>
                        <field name="sous_categorie_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="accorderie_type_service_view_graph" model="ir.ui.view">
        <field name="name">accorderie_type_service_graph</field>
        <field name="model">accorderie.type.service</field>
        <field name="arch" type="xml">
            <graph string="Accorderie type service">
                <field name="nom_complet" type="row" />
                <field name="approuve" type="row" />
                <field name="description" type="row" />
                <field name="identifiant" type="row" />
                <field name="nom" type="row" />
                <field name="numero" type="measure" />
                <field name="sous_categorie_id" type="row" />
            </graph>
        </field>
    </record>

    <record id="accorderie_type_service_view_kanban" model="ir.ui.view">
        <field name="name">accorderie_type_service_kanban</field>
        <field name="model">accorderie.type.service</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="nom_complet" />
                <field name="approuve" />
                <field name="description" />
                <field name="identifiant" />
                <field name="nom" />
                <field name="numero" />
                <field name="sous_categorie_id" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="nom_complet" />
                                        </strong>
                                    </li>
                                    <li class="text-success float-right mb4" t-if="record.approuve.raw_value">
                                        <i aria-label="Ok" class="fa fa-circle" role="img" title="Ok" />
                                    </li>
                                    <li class="text-danger float-right mb4" t-if="!record.approuve.raw_value">
                                        <i aria-label="Invalid" class="fa fa-circle" role="img" title="Invalid" />
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="description" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="identifiant" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="nom" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="numero" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="sous_categorie_id" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="accorderie_type_service_view_pivot" model="ir.ui.view">
        <field name="name">accorderie_type_service_pivot</field>
        <field name="model">accorderie.type.service</field>
        <field name="arch" type="xml">
            <pivot string="Accorderie type service">
                <field name="nom_complet" type="row" />
                <field name="approuve" type="row" />
                <field name="description" type="row" />
                <field name="identifiant" type="row" />
                <field name="nom" type="row" />
                <field name="numero" type="measure" />
                <field name="sous_categorie_id" type="row" />
            </pivot>
        </field>
    </record>

    <record id="accorderie_type_service_view_search" model="ir.ui.view">
        <field name="name">accorderie_type_service_search</field>
        <field name="model">accorderie.type.service</field>
        <field name="arch" type="xml">
            <search string="Accorderie type service">
                <filter domain="[('nom_complet','!=',False)]" name="nom_complet" string="Nom complet" />
                <filter domain="[('active','=',False)]" name="Inactive" string="Inactive Accorderie type service" />
                <filter domain="[('approuve','=',True)]" name="approuve" string="Approuv&#233;" />
                <filter domain="[('description','!=',False)]" name="description" string="Description" />
                <filter domain="[('identifiant','!=',False)]" name="identifiant" string="Identifiant" />
                <filter domain="[('nom','!=',False)]" name="nom" string="Nom" />
                <filter domain="[('numero','!=',False)]" name="numero" string="Num&#233;ro" />
                <filter
                    domain="[('sous_categorie_id','!=',False)]"
                    name="sous_categorie_id"
                    string="Sous-cat&#233;gorie"
                />
            </search>
        </field>
    </record>

    <record id="accorderie_type_service_view_tree" model="ir.ui.view">
        <field name="name">accorderie_type_service_tree</field>
        <field name="model">accorderie.type.service</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nom_complet" />
                <field name="approuve" />
                <field name="description" />
                <field name="identifiant" />
                <field name="nom" />
                <field name="numero" />
                <field name="sous_categorie_id" />
            </tree>
        </field>
    </record>

    <act_window
        id="accorderie_type_service_type_de_services_action_window"
        name="Type de services"
        res_model="accorderie.type.service"
        view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
